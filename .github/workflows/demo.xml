name: Build and Deploy Sphinx Documentation

on:
  push:
    branches:
      - main  # Set this to the branch from which you want to deploy

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest

    steps:
    - uses: actions/checkout@v3
      with:
        fetch-depth: 0  # Ensures history is fetched for GH Pages to work

    - name: Set up Python
      uses: actions/setup-python@v4
      with:
        python-version: '3.x'  # Set this to your Python version

    - name: Install dependencies
      run: |
        python -m pip install --upgrade pip
        pip install sphinx
        pip install -r requirements.txt  # If you have any other dependencies

    - name: Build Sphinx HTML
      run: |
        make html  # Or `sphinx-build -b html source/ build/` depending on your setup

    - name: Deploy to GitHub Pages
      uses: peaceiris/actions-gh-pages@v3
      with:
        github_token: ${{ secrets.GITHUB_TOKEN }}
        publish_dir: ./src/docs/build/html  # Set this to where your build files are located
        force_orphan: true
